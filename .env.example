# ============================================
# ChatBot Project - Environment Configuration
# ============================================

# Project Configuration
PROJECT_NAME=chatbot-project
COMPOSE_PROJECT_NAME=chatbot

# Service Ports
# You can change these if you have port conflicts
QDRANT_PORT=6333
OLLAMA_PORT=11434
NODERED_PORT=1880
AGENT1_PORT=8001
AGENT2_PORT=8002
AGENT3_PORT=8003
AGENT4_PORT=8004
AGENT5_PORT=8005
OPENWEBUI_PORT=3000

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_API_KEY=
# Leave empty for no authentication, or set a secure key

# Ollama Configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=mistral:7b
# Available models: mistral:7b, llama2:7b, llama2:13b, codellama:7b

# Agent1 Configuration
AGENT1_COLLECTION=agent1_student
AGENT1_LOG_LEVEL=INFO
AGENT1_MAX_RESULTS=2
AGENT1_SCORE_THRESHOLD=0.25
AGENT1_CONTEXT_LENGTH=600

# Node-RED Configuration
NODERED_URL=http://node-red:1880

# Open WebUI Configuration
OPENWEBUI_OLLAMA_BASE_URL=http://ollama:11434

# Python Configuration
PYTHONUNBUFFERED=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Network
DOCKER_NETWORK=ai_network

# Git Configuration (for deployment)
# Update this with your actual repository URL
GIT_REPO=https://github.com/yourusername/chatbot-project.git
GIT_BRANCH=main

# Deployment Path
DEPLOY_PATH=/opt/chatbot-project

# Backup Configuration
BACKUP_DIR=/opt/chatbot-backups
BACKUP_RETENTION_DAYS=30

# Security
# Generate secure passwords for production!
# Use: openssl rand -base64 32
SECRET_KEY=change-this-in-production
API_KEY=change-this-in-production

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=9090

# Development vs Production
ENVIRONMENT=production
# Set to 'development' for dev mode, 'production' for prod

# Resource Limits (optional - uncomment to use)
# COMPOSE_MEMORY_LIMIT=4g
# COMPOSE_CPU_LIMIT=2
